    <file name="src/Phinx/Console/Command/Status.php" role="php" />
    <file name="src/Phinx/Console/PhinxApplication.php" role="php" />
    <file name="src/Phinx/Db/Adapter/AdapterInterface.php" role="php" />
    <file name="src/Phinx/Db/Adapter/MysqlAdapter.php" role="php" />
    <file name="src/Phinx/Db/Adapter/PdoAdapter.php" role="php" />
